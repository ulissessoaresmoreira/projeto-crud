<!DOCTYPE html>
<html lang="pt-br">
<head>
    
    <%- include('partials/head.ejs')%>
    
</head>
<body>
    <h1> <%- title %> </h1>

    <%- include('partials/navbar.ejs') %>

    <% if (typeof message !== 'undefined') { %>
        <%= message %>
    <% } %>

    <form action="/edit" method="POST">
        <div>
            <label> Nome </label>
            <input type="text" name="name" placeholder="Digite o seu nome" value="<%= user.name%>">
        </div>
        <div>
            <label> Idade </label>
            <input type="number" name="age" placeholder="Digite sua idade" value="<%= user.age%>">
        </div>
        <div>
            <label> E-mail </label>
            <input type="email" name="email" placeholder="Digite seu e-mail" value="<%= user.email%>">
        </div>
        <div>
            <label> Password </label>
            <input type="password" name="password" placeholder="Digite sua senha">
        </div>
        <button type="submit"> Editar </button>
    </form>


    


    
    <%- include('partials/foot.ejs')%>
</body>
</html>